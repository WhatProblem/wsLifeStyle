/* pages/components/loading/loading.wxss */

.loading {
  width: 100%;
  height: 100%;
  position: relative;
  background: rgba(0, 0, 0, 0.3);
}

.loading .loads {
  width: 128rpx;
  height: 128rpx;
  transform: translate(-50%, -50%);
  position: absolute;
  top: 50%;
  left: 45%;
  animation: loading 1s linear infinite;
}

@keyframes loading {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

.loads .loadIcon {
  width: 100%;
  height: 100%;
}
