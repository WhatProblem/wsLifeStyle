/* pages/components/goodsList/goodsList.wxss */

.goodsList {
  width: 100%;
  padding-top: 30rpx;
  background-color: #f0f0f0;
  font-size: 28rpx;
}

.content {
  width: 47%;
  height: 500rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 2%;
  float: left;
  position: relative;
}

.logo {
  position: absolute;
  top: 0;
  left: 0;
  width: 120rpx;
  height: 40rpx;
  border-radius: 10rpx 0 0 0;
}

.content:nth-child(2n+1) {
  margin-left: 2%;
  margin-right: 1%;
}

.content:nth-child(2n) {
  margin-left: 1%;
  margin-right: 2%;
}

.goodSrc {
  width: 100%;
  height: 100%;
}

.introduce {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #fff;
}

.introduce .intrContent {
  padding: 0 16rpx;
}

.introduce .divideLine {
  box-sizing: border-box;
  width: 100%;
  height: 1px;
  border-bottom: 1px dotted #666;
}
