/* pages/components/navbar/navbar.wxss */

.navbar {
  width: 100%;
  height: 170rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.navItem {
  width: 25%;
  height: 100%;
}

.navigator-hover {
    color: blue;
}

.item {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.navTitle {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.navItem:nth-child(n) {
  width: 120rpx;
  height: 120rpx;
  border-radius: 40rpx;
}

.navItem:nth-child(1) {
  background-color: #d2bddd;
}

.navItem:nth-child(2) {
  background-color: #48af29;
}

.navItem:nth-child(3) {
  background-color: #f08af6;
}

.navItem:nth-child(4) {
  background-color: #bfd741;
}

.navItem .navImg {
  width: 60%;
  height: 60%;
}
